<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".USER.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/black">
        <ImageView
            android:id="@+id/ivUserPhoto"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_margin="20dp"
            android:src="@drawable/profile_photo"/>

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/profileName"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvProfileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/profileAddress"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@color/white"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etFullname"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:hint="@string/nameExample"
            android:textColor="@color/white"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/profile_user"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:hint="@string/emailExample"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/emailuser"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"/>

        <EditText
            android:id="@+id/etPlace"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:drawableStart="@drawable/homeprofile"
            android:hint="@string/addressExample"
            android:textColor="@color/white"
            android:inputType="text"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:drawablePadding="10dp"
            android:layout_marginBottom="14dp"
            />


        <com.santalu.widget.MaskEditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_marginBottom="24dp"
            android:hint="@string/phoneNumberExample"
            android:drawableStart="@drawable/phone_number"
            android:background="@color/black"
            android:inputType="phone"
            app:met_mask="+63 ### ### ####"/>

        <Button
            android:id="@+id/btnEditSave"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="@string/profileSave"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="@string/backHome"
            android:textAllCaps="false"/>
    </LinearLayout>


