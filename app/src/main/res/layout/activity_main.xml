<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/llHeader"
                android:orientation="horizontal"
                android:background="@drawable/white_stripes_background">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@mipmap/logo"
                    />
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:text="@string/mainActivityWelcome"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:background="@color/black"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.michaldrabik.tapbarmenulib.TapBarMenu
            android:id="@+id/tapBarMenu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="14dp"
            app:tbm_backgroundColor="@color/black"
            >

            <ImageView
                android:id="@+id/homeMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/house"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/cartMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/shopping"
                tools:visibility="visible"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/phoneMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/contact"
                tools:visibility="visible"
                />

            <ImageView
                android:id="@+id/profileMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/users"
                tools:visibility="visible"
                />

        </com.michaldrabik.tapbarmenulib.TapBarMenu>
    </FrameLayout>
</RelativeLayout>


